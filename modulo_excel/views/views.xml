<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="modulo_excel.list">
      <field name="name">modulo_excel list</field>
      <field name="model">modulo_excel.lista_archivos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="archivo"/>
          <field name="columnas"/>
          <field name="registro"/>
          <field name="total"/>
          <field name="fecha_subida"/>
        </tree>
      </field>
    </record>
    

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="modulo_excel.action_window">
      <field name="name">modulo_excel window</field>
      <field name="res_model">modulo_excel.lista_archivos</field>
      <field name="view_mode">tree,form</field>
    </record>
    

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="modulo_excel.action_server">
      <field name="name">modulo_excel server</field>
      <field name="model_id" ref="model_modulo_excel_lista_archivos"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    

    <!-- Top menu item -->

    <menuitem name="modulo_excel" id="modulo_excel.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="modulo_excel.menu_1" parent="modulo_excel.menu_root"/>
    <menuitem name="Menu 2" id="modulo_excel.menu_2" parent="modulo_excel.menu_root"/>

    <!-- actions -->

    <menuitem name="Lista" id="modulo_excel.menu_1_list" parent="modulo_excel.menu_1"
              action="modulo_excel.action_window"/>
    <menuitem name="Server to list" id="modulo_excel" parent="modulo_excel.menu_2"
              action="modulo_excel.action_server"/>

  </data>
</odoo>